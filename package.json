{
  "name": "env-checker",
  "version": "0.0.1",
  "description": "A simple CLI tool to check if all the required environment variables are set, based on a schema file.",
  "type": "module",
  "bin": {
    "env-checker": "build/index.js"
  },
  "files": [
    "/build"
  ],
  "exports": {
    ".": {
      "import": "./build/index.js",
      "require": "./build/index.cjs",
      "default": "./build/index.js",
      "types": "./build/index.d.ts"
    }
  },
  "scripts": {
    "start": "node  --loader ts-node/esm --experimental-specifier-resolution=node src/index.ts",
    "build": "tsup src/index.ts --dts --format cjs,esm --clean --minify --out-dir build",
    "test": "vitest --coverage",
    "test:coverage": "npx serve coverage",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "env",
    "environment",
    "variables",
    "dotenv",
    "schema",
    "check",
    "cli",
    "command"
  ],
  "author": "JLannoo",
  "license": "ISC",
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/node": "^20.4.1",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "eslint": "^8.44.0",
    "ts-node": "^10.9.1",
    "tsup": "^7.1.0",
    "typescript": "^5.1.6",
    "vitest": "^0.32.2"
  },
  "dependencies": {
    "@types/inquirer": "^9.0.3",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "dotenv": "^16.3.1",
    "inquirer": "^9.2.7",
    "zod": "^3.21.4"
  }
}
